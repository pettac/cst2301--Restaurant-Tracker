<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.cuny.citytech.restauranttracker.SingleRes">



    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hr_res_score"
        android:layout_below="@+id/hr_res_title"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hr_title"
        android:id="@+id/hr_res_title"
        android:textSize="30sp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/hr_res_id"
        android:visibility="invisible"
        android:layout_below="@+id/hr_res_phone"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/hr_res_name"
        android:textSize="25sp"
        android:layout_below="@+id/hr_res_score"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/hr_res_add1"
        android:layout_alignParentStart="true"
        android:textSize="25sp"
        android:layout_below="@+id/hr_res_name"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/hr_res_add2"
        android:layout_alignParentStart="true"
        android:textSize="25sp"
        android:layout_below="@+id/hr_res_add1"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/hr_res_phone"
        android:layout_alignParentStart="true"
        android:textSize="25sp"
        android:layout_below="@+id/hr_res_add2"
        android:layout_alignParentLeft="true" />
</RelativeLayout>
